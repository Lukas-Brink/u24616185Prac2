@model IEnumerable<u24616185Prac2.Models.PersonModel>

@{
    ViewBag.Title = "List of People";
}

<style>
    body {
        background-color: #d4edda; /* Light green background */
    }

    /* Dark green table header */
    thead {
        background-color: #218838;
        color: white;
    }

    /* Green button styles */
    .btn-green {
        background-color: #28a745; /* Bootstrap success green */
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
    }

        .btn-green:hover {
            background-color: #1e7e34; /* Darker green on hover */
        }
</style>

<h2 class="text-center">List of People</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email address</th>
            <th>Link to personal page</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.StudentNumber</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.EmailAddress</td>
                <td>
                    <a href="@Url.Content(person.MyLink)" class="btn-green" target="_blank">LINK</a>
                </td>
            </tr>
        }
    </tbody>
</table>
