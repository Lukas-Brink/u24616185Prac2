@model IEnumerable<u24616185Prac2.Models.PersonModel>

@{
    ViewBag.Title = "List of People";
}



<h2 class="text-center">List of People</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email address</th>
            <th>Link to personal page</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.StudentNumber</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.EmailAddress</td>
                <td>
                    <a href="@Url.Content(person.MyLink)" class="btn btn-link" target="_blank">LINK</a>
                </td>
            </tr>
        }
    </tbody>
</table>

